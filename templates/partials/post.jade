article.slide(style='background-image: url(' + post.metadata.image + ')')
  div.vignette
  div.prev
  div.next
  p
    span.dish= post.metadata.dish
    - if (post.metadata.location!= null)
      span.at
      span.restaurant
        a(href=post.metadata.restauranturl)
          = post.metadata.restaurant
          br
          = post.metadata.location
    span.date
      - longurl = post.url
      - shorturl = longurl.substring(0,longurl.length - 5) + '/' // remove .html
      - date = post.metadata.date.toUTCString()
      - prettydate = date.substr(0, 5) + date.substr(8, 4) + date.substr(5, 2)
      a(href=shorturl)= prettydate
